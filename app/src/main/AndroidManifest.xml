<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.mindblowing.renovations3d"
  android:versionCode="194"
  android:versionName="1.94">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25"/>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />


    <!-- Tell the system this app requires OpenGL ES 2.0. -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BILLING" />

    <!-- no internet required to use -->
    <uses-feature android:name="android.permission.INTERNET" android:required="false" />

    <!--  android:hardwareAccelerated="false" because Vivante GPUs fail to play nice with teh Jogl renderering -->
  <application android:label="@string/app_name"
               android:icon="@drawable/renovations3dicon"
               android:largeHeap="true"
               android:launchMode="singleInstance"
               android:hardwareAccelerated="false"
               android:theme="@style/MyCustomTheme">

      <activity android:name="com.eteks.renovations3d.Renovations3DActivity"
                android:label="@string/app_name"
                android:configChanges="keyboardHidden|orientation|screenSize"
          >
          <intent-filter>
              <action android:name="android.intent.action.MAIN" />
              <category android:name="android.intent.category.LAUNCHER" />
              <category android:name="android.intent.category.DEFAULT" />
          </intent-filter>
          <intent-filter android:label="@string/app_name">
              <action android:name="android.intent.action.VIEW" />
              <category android:name="android.intent.category.DEFAULT" />

              <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.sh3d"
                  android:scheme="http" />
              <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.sh3d"
                  android:scheme="https" />
              <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.sh3f"
                  android:scheme="http" />
              <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.sh3f"
                  android:scheme="https" />
              <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.sh3t"
                  android:scheme="http" />
              <data
                  android:host="*"
                  android:mimeType="*/*"
                  android:pathPattern=".*\\.sh3t"
                  android:scheme="https" />
          </intent-filter>
          <!-- MIME type matcher for .apkg files coming from providers like gmail which hide the file extension -->
          <intent-filter>
              <action android:name="android.intent.action.VIEW" />
              <category android:name="android.intent.category.DEFAULT" />
              <data android:mimeType="application/sweethome3d"/>
              <data android:mimeType="application/x-sweethome3d"/>
          </intent-filter>
          <intent-filter android:label="@string/app_name">
              <action android:name="android.intent.action.VIEW" />
              <category android:name="android.intent.category.DEFAULT" />
              <data android:scheme="file" />
              <data android:mimeType="*/*" />
              <!--
                Work around Android's ugly primitive PatternMatcher
                implementation that can't cope with finding a . early in
                the path unless it's explicitly matched.
                -->
              <data android:host="*" />
              <data android:pathPattern=".*\\.sh3d" />
              <data android:pathPattern=".*\\..*\\.sh3d" />
              <data android:pathPattern=".*\\..*\\..*\\.sh3d" />
              <data android:pathPattern=".*\\..*\\..*\\..*\\.sh3d" />
              <!-- keep going if you need more -->
              <data android:host="*" />
              <data android:pathPattern=".*\\.sh3f" />
              <data android:pathPattern=".*\\..*\\.sh3f" />
              <data android:pathPattern=".*\\..*\\..*\\.sh3f" />
              <data android:pathPattern=".*\\..*\\..*\\..*\\.sh3f" />
              <data android:host="*" />
              <data android:pathPattern=".*\\.sh3t" />
              <data android:pathPattern=".*\\..*\\.sh3t" />
              <data android:pathPattern=".*\\..*\\..*\\.sh3t" />
              <data android:pathPattern=".*\\..*\\..*\\..*\\.sh3t" />

          </intent-filter>
      </activity>

      <activity android:label="@string/app_name"
                android:name="com.eteks.renovations3d.utils.JoglStatusActivity"/>
  </application>
</manifest>
