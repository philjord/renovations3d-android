<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="*">
    <TableRow>
   <!-- <com.google.android.flexbox.FlexboxLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/furniture_cat_FlexboxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch" > -->
<com.eteks.renovations3d.utils.HorizontalFlowLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/furniture_cat_categoryLabel"
            android:text="Category"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/furniture_cat_category"
            android:text=""
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/furniture_cat_search"
            android:hint="Search"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />

    </com.eteks.renovations3d.utils.HorizontalFlowLayout>
    </TableRow>
    <TableRow>
    <GridView
              android:id="@+id/furniture_cat_main_grid"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:columnWidth="85dp"
              android:numColumns="auto_fit"
              android:verticalSpacing="10dp"
              android:horizontalSpacing="10dp"
              android:stretchMode="columnWidth"
              android:gravity="center"
        />
    </TableRow>
    </TableLayout>
</LinearLayout>
