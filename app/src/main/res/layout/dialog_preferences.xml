<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="10dp"
                  android:showDividers="middle"
                  android:divider="@drawable/empty_tall_divider">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <TextView
                android:id="@+id/prefs_languageLabel"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/prefs_languageSpinner"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/prefs_unitLabel"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/prefs_unitSpinner"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/prefs_arialCenterLabel"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <CheckBox
                android:id="@+id/prefs_arialCenterRadioButton"
                android:text="Color:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/prefs_magnetismLabel"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <CheckBox
                android:id="@+id/prefs_magnetismRadioButton"
                android:text="Color:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/prefs_rulersLabel"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
               />
            <CheckBox
                android:id="@+id/prefs_rulersRadioButton"
                android:text="Color:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/prefs_gridLabel"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <CheckBox
                android:id="@+id/prefs_gridRadioButton"
                android:text="Color:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
        <TableRow>
            <TextView
                android:id="@+id/prefs_roomRenderLabel"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <RadioButton
                android:id="@+id/prefs_roomRenderMonoRadioButton"
                android:text="Color:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <RadioButton
                android:id="@+id/prefs_roomRenderColorRadioButton"
                android:text="Color:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        </TableRow>
        </TableLayout>
        <TextView android:layout_height="1px" android:layout_width="fill_parent" android:background="#BDBDBD"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
        <TableRow>
            <TextView
                android:id="@+id/prefs_newWallsTextureLabel"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <Spinner
                android:id="@+id/prefs_newWallsTextureSpinner"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/prefs_newWallsThicknessLabel"
                android:text="newWallsThickness"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
            <NumberPicker
                android:id="@+id/prefs_newWallsThicknessSpinner"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                 />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/prefs_newWallsHeightLabel"
                android:text="newWallsHeight"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
            <NumberPicker
                android:id="@+id/prefs_newWallsHeightSpinner"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/prefs_newLevelFloorThicknessLabel"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
            <NumberPicker
                android:id="@+id/prefs_newLevelFloorThicknessSpinner"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </TableRow>
</TableLayout>
            <TextView android:layout_height="1px" android:layout_width="fill_parent" android:background="#BDBDBD"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
        <TableRow>
            <CheckBox
                android:id="@+id/prefs_autoSaveRadioButton"
                android:text="Auto Save time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <NumberPicker
                android:id="@+id/prefs_autoSaveSpinner"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
            />
            <TextView
                android:id="@+id/prefs_autoSaveUnitLabel"
                android:text="Min"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                />
        </TableRow>
        <Button
            android:id="@+id/prefs_resetTipsButton"
            android:text="resetTips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"/>
    </TableLayout>
        <TextView android:layout_height="1px" android:layout_width="fill_parent" android:background="#BDBDBD"/>
        <Button
            android:id="@+id/prefs_closeButton"
            android:text="Close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"/>
</LinearLayout>
</ScrollView>